<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_focused"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/image" />

    <TextView
        android:text="Name"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image"
        android:id="@+id/textView"
        android:layout_width="60dp" />

    <TextView
        android:text="Style"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:id="@+id/textView3" />

    <TextView
        android:text="Country"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/image"
        android:id="@+id/textView4" />

    <TextView
        android:text="DOB"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_below="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:id="@+id/textView5" />

    <TextView
        android:text="Age"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_below="@+id/textView5"
        android:layout_toEndOf="@+id/image"
        android:id="@+id/textView6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView"
        android:id="@+id/name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/name"
        android:layout_toEndOf="@+id/textView"
        android:id="@+id/country" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/country"
        android:layout_toEndOf="@+id/textView4"
        android:id="@+id/dob" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/dob"
        android:layout_toEndOf="@+id/textView5"
        android:id="@+id/age" />

    <TextView
        android:text="batting style"
        android:layout_height="25dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:id="@+id/textView11"
        android:layout_width="150dp" />

    <TextView
        android:text="bowling style"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:id="@+id/textView12" />

    <TextView
        android:text="Teams Played For"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:id="@+id/textView13" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:id="@+id/teams" />

    <TextView
        android:text="Info"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/teams"
        android:layout_alignStart="@+id/teams"
        android:id="@+id/textView15" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:id="@+id/info" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/textView11"
        android:id="@+id/bat_style" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/bat_style"
        android:layout_toEndOf="@+id/textView12"
        android:id="@+id/bowling_style" />

</RelativeLayout>
