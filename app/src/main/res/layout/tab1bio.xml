<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_focused" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image"
        android:text="Name" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image"
        android:layout_marginStart="11dp"
        android:background="#E7EFEA"
        android:text="Style"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/image"
        android:text="Country" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:text="DOB" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_below="@+id/textView5"
        android:layout_toEndOf="@+id/image"
        android:text="Age" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/textView5"
        android:layout_below="@+id/name"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/dob"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:text="batting style" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView11"
        android:layout_below="@+id/textView11"
        android:text="bowling style" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:background="#E7EFEA"
        android:text="Teams Played For"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/teams"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/textView13"
        android:layout_below="@+id/textView13" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/teams"
        android:layout_below="@+id/teams"
        android:background="#E7EFEA"
        android:text="Info"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/bat_style"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/textView11" />

    <TextView
        android:id="@+id/bowling_style"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/bat_style"
        android:layout_toEndOf="@+id/textView12" />

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/teams" />

    <TextView
        android:id="@+id/dob"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView11" />

</RelativeLayout>
